{
  "name": "@stackr23/gitmoji-conventional-commits",
  "version": "1.1.1",
  "description": "add gitmojis to conventional commit messages",
  "main": "./dist/index.js",
  "directories": [
    "src",
    "utils"
  ],
  "scripts": {
    "test": "node ./test/index.js",
    "build": "bash ./build.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stackr23/gitmoji-conventional-commits.git"
  },
  "keywords": [
    "conventional-commits",
    "gitmoji",
    "git-hooks",
    "semantic",
    "versioning"
  ],
  "author": "Stefan Friedl",
  "license": "GNU LGPLv3",
  "bugs": {
    "url": "https://github.com/stackr23/gitmoji-conventional-commits/issues"
  },
  "homepage": "https://github.com/stackr23/gitmoji-conventional-commits#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "babel-preset-minify": "^0.5.0"
  },
  "release": {
    "branch": "master",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Changelog\n> generated with [@semantic-release/changelog](https://github.com/semantic-release/changelog)"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js,css}",
            "CHANGELOG.md",
            "LINCENSE",
            "package.json",
            "gitbash-output.png",
            "README.md"
          ],
          "message": "chore(release): :bookmark: ${nextRelease.version} :package: package :rocket: published\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.1",
    "@semantic-release/npm": "^5.1.1",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "semantic-release": "^15.12.0"
  }
}
